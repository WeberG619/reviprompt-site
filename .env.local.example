# Application URLs
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Product Price IDs (Update these with your actual Stripe price IDs)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_placeholder
STRIPE_PRICE_STARTER_ANNUAL=price_starter_annual_placeholder
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_placeholder
STRIPE_PRICE_PROFESSIONAL_ANNUAL=price_professional_annual_placeholder
STRIPE_PRICE_AEC_PROFESSIONAL_MONTHLY=price_aec_professional_monthly_placeholder
STRIPE_PRICE_AEC_PROFESSIONAL_ANNUAL=price_aec_professional_annual_placeholder
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_placeholder
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_enterprise_annual_placeholder

# Feature Flags
ENABLE_STRIPE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true